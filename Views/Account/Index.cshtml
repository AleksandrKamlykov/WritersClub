@model IEnumerable<User>
@{
    ViewData["Title"] = "User Page";
}

<h2>Пользователь <b>@ViewData["Name"]</b> с Login <b>@ViewData["Login"]</b> успешно зарегистрирован</h2>
<h2>Список зарегистрированных пользователей</h2>


    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Имя</th>
                <th>Email</th>
                <th>Логин</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
            if (user.State == 0)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.Name</td>
                    <td>@user.Email</td>
                    <td>@user.Login</td>
                    <td>
                        <a asp-action="UpdateUser" asp-route-id="@user.Id" class="btn btn-outline-primary btn-sm">Редактировать</a>
                        <form asp-action="DeleteUser" method="post" class="d-inline">
                            <input type="hidden" name="Id" value="@user.Id" />
                            <button type="submit" class="btn btn-outline-danger btn-sm">Удалить</button>
                        </form>
                    </td>
                </tr>
                }
            }
        </tbody>
    </table>

