@model User


<div class="container mt-5">
    <div class="card">
        <div class="card-header">
            <h2>User Details</h2>

        </div>

        <div class="d-flex justify-content-end gap-2">
            <a asp-action="UpdateUser" asp-route-id="@Model.Id" class="btn btn-outline-primary btn-sm">Редактировать</a>

            <form asp-action="DeleteUser" method="post" class="d-inline">
                <input type="hidden" name="Id" value="@Model.Id" />
                <button type="submit" class="btn btn-outline-danger btn-sm">Удалить</button>
            </form>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-sm-3">
                    <strong>ID:</strong>
                </div>
                <div class="col-sm-9">
                    @Model.Id
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-sm-3">
                    <strong>Name:</strong>
                </div>
                <div class="col-sm-9">
                    @Model.Name
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-sm-3">
                    <strong>Email:</strong>
                </div>
                <div class="col-sm-9">
                    @Model.Email
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-sm-3">
                    <strong>Login:</strong>
                </div>
                <div class="col-sm-9">
                    @Model.Login
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-sm-3">
                    <strong>State:</strong>
                </div>
                <div class="col-sm-9">
                    @Model.State
                </div>
            </div>
        </div>
        <div class="card-footer text-right">
            <a href="@Url.Action("Index", "Account")" class="btn btn-primary">Back to List</a>
        </div>
    </div>
</div>